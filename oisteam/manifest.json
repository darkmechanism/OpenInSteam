{
  "manifest_version": 2,
  "name": "Open In Steam",
  "version": "1.0",
  "description": "Open Steam links in the Steam application.",
  "permissions": ["tabs", "https://*/*", "http://*/*"],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["*://*.steampowered.com/*"]
  },
  {
    "js": ["content.js"],
    "matches": ["*://*.steamcommunity.com/*"]
  }]
}